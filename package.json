{
  "name": "web-app",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite --host :: --port 3000",
    "build:spa": "(node tools/generate-llms.js || echo \"generate-llms skipped\") && vite build",
    "build": "npm run build:spa && node tools/prerender-routes.mjs",
    "preview": "vite preview --host :: --port 3000",
    "format": "prettier --write .",
    "lint": "eslint .",
    "test": "npm run build:spa",
    "test:unit": "vitest run tests/unit",
    "test:integration": "vitest run tests/integration",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:a11y": "playwright test tests/a11y",
    "test:perf": "lhci autorun --config=lighthouserc.json",
    "test:load": "k6 run k6/login-burst.js",
    "test:security": "zap-baseline -t http://127.0.0.1:3000 -c zap-baseline.conf",
    "test:audit": "npm audit --audit-level=low",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "sitemap": "node tools/generate-sitemap.mjs",
    "link-map": "node tools/generate-link-map.mjs",
    "link-audit": "node tools/generate-sitemap.mjs && node tools/internal-link-audit.mjs",
    "prerender": "node tools/prerender-routes.mjs",
    "sync:worker-secrets": "node tools/sync-worker-secrets.js"
  },
  "dependencies": {
    "@emotion/is-prop-valid": "^1.3.1",
    "@radix-ui/react-alert-dialog": "^1.1.4",
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-checkbox": "^1.1.3",
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.4",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-slider": "^1.2.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tabs": "^1.1.2",
    "@radix-ui/react-toast": "^1.2.4",
    "@supabase/supabase-js": "^2.45.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.469.0",
    "pdfjs-dist": "^4.10.38",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-helmet-async": "^2.0.4",
    "react-router-dom": "^7.1.1",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@babel/generator": "^7.26.3",
    "@babel/parser": "^7.26.3",
    "@babel/traverse": "^7.26.4",
    "@babel/types": "^7.26.3",
    "@lhci/cli": "^0.15.1",
    "@playwright/test": "^1.58.1",
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^5.1.3",
    "@vitest/coverage-v8": "^4.0.18",
    "axe-core": "^4.9.1",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.2",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "jsdom": "^24.0.0",
    "globals": "^17.3.0",
    "lighthouse": "^13.0.1",
    "msw": "^2.3.5",
    "postcss": "^8.4.49",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.17",
    "terser": "^5.37.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "overrides": {
    "tmp": "^0.2.5"
  }
}
